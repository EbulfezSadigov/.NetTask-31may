
@model HomeViewModel

<div class="gtco-container">
    <div class="row">
        <div class="col-md-12">
            <div class="owl-carousel owl-carousel-fullwidth">
                @foreach (Slider sliders in Model.sliders)
                {
    <div class="item">
        <a href="#">
            <img src="~/images/@sliders.Image" alt="Free Website Template by FreeHTML5.co">
            <div class="slider-copy">
                <h2>@sliders.Title</h2>
            </div>
        </a>
    </div>}
            </div>
        </div>
    </div>
</div>

<div class="gtco-section">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 gtco-heading text-center">
                <h2>Work</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus placerat enim et urna sagittis, rhoncus euismod erat tincidunt. Donec tincidunt volutpat erat.</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="owl-carousel owl-carousel-carousel">
                    @foreach (Projects item in Model.projects)
                    {
                        <div class="item">
                            <div class="gtco-item">
                                <a href="#"><img src="images/@item.Image" alt="" class="img-responsive"></a>
                                <h2><a href="#">@item.Title</a></h2>
                                <p class="role">@item.Text</p>
                            </div>
                        </div>
                    }
                    
                </div>
            </div>

        </div>
    </div>
</div>
<!-- END Work -->

<div class="gtco-section">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-6 gtco-news">
                <h2>News</h2>
                <ul>
                    @foreach (News item in Model.news)
	{
                    <li>
                        <a href="#">
                            <span class="post-date">@item.date.ToString("MMMM.dd.yyyy")</span>
                            <h3>@item.Subtitle</h3>
                            <p>@item.Text</p>
                        </a>
                    </li>
	}
                </ul>
                <p><a href="#" class="btn btn-sm btn-special">More News</a></p>
            </div>
            <!-- END News -->
            <div class="col-md-5 col-md-push-1 gtco-testimonials">
                @foreach (Testimonials item in Model.ts)
                {

                <h2>@item.Title</h2>
                <blockquote>
                    <p>&ldquo;@item.Subtitle&ldquo;</p>
                    <p class="author"><cite>&mdash; @item.Text</cite></p>
                </blockquote>
                }
            </div>
        </div>
    </div>
</div>
<!-- END  -->

<div class="gtco-section gto-features">
    <div class="gtco-container">
        <div class="row">
            @foreach (Features item in Model.features)
            {
                <div class="col-md-4">
                    <div class="feature-left">
                        <i class="@item.Icon"></i>
                        <div class="copy">
                            <h3>@item.Title</h3>
                            <p>@item.Text</p>
                            <p><a href="#" class="gtco-more">@item.Link</a></p>
                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>
</div>



